<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>Пользователи</title>

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
    />

    <link rel="icon" href="#" type="image/x-icon" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/users.css" />
    <link rel="stylesheet" href="/css/fix.css" />
    <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
</head>
<body>

<%- include('header.ejs') %>

<div class="main-content">
<main>
<section>
    <table>
        <thead>
        <tr>
            <th>ID</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Логин</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
        </thead>
        <tbody>
        <% users.forEach(function(user) { %>
            <tr data-user-id="<%= user.id %>">
                <td class="id"><%= user.id %></td>
                <td class="name"><%= user.name %></td>
                <td class="last_name"><%= user.last_name %></td>
                <td class="login"><%= user.login %></td>
                <td class="role"><%= user.role %></td>
                <td class="btn-controllers">
                    <button class="btn-user-change" data-user-id="<%= user.id %>">Изменить</button>
                    <button class="btn-user-save no-active" data-user-id="<%= user.id %>">Сохранить</button>
                    <button class="btn-user-delete" data-user-id="<%= user.id %>">Удалить</button>
                </td>
            </tr>
        <% }); %>
        </tbody>
    </table>
</section>
</main>
</div>
<%- include('footer.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/users.js"></script>
</body>
</html>
