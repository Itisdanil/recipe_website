<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>Рецепты</title>

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
    />

    <link rel="icon" href="#" type="image/x-icon" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/recipe.css" />
    <link rel="stylesheet" href="/css/fix.css" />
    <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
</head>
<body>

<%- include('header.ejs') %>
<div class="main-content">
<main>
    <section class="search">
        <div class="search-filter search-recipe search-active">По рецептам</div>
        <div class="search-filter search-ingredient">По ингредиентам</div>
        <input type="text" id="search" placeholder="Поиск" value="<%= search %>"/>
    </section>
    <section class="recipes"></section>

    <div class="pagination-container">
        <span class="go-to-page">
          <input type="text" id="pageInput" placeholder="Страница" value="<%= page %>"/>
          <button>Перейти</button>
        </span>
    </div>
</main>
</div>
<%- include('footer.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/recipe/search.js"></script>
<script src="/js/recipe/textFix.js"></script>
<script src="/js/recipe/pag.js"></script>
<script src="/js/favorite/favorite.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
