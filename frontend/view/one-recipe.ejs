<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>Пример рецепта</title>

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
    />

    <link rel="icon" href="#" type="image/x-icon" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/one-recipe.css" />
    <link rel="stylesheet" href="/css/fix.css" />
    <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
</head>
<body>

<%- include('header.ejs') %>
<div class="main-content">
<main>
    <div class="glass-container">
        <section class="recipe-info">
            <div class="back-btn">
                <a href="
                <% if (back === 'favorite')  { %>
                    /favorite
                <% } else if (back === 'recipe') { %>
                    /recipe?page=<%= page %>&search=<%= search %>
                <% } else { %>
                    /recipe
                <% } %>
                "><button class="change-btn">< Назад</button></a>
            </div>
            <% if (role === "Администратор" || id === recipe.creater_id) { %>
                <div class="control-btn">
                    <a href="/admin/recipe/change/<%= recipe.id %>"><button class="change-btn">Редактировать</button></a>
                    <button class="delete-btn" data-id="<%= recipe.id %>">Удалить</button>
                </div>
            <% } %>

            <h1 class="name"><%= recipe.name %></h1>
            <img src="/image/recipe/<%= recipe.path_photo %>" alt="Фото рецепта" id="image">

            <p class="block-name">Ингредиенты</p>
            <ul>
                <% ingredients.forEach(ingredient => { %>
                    <li><p class="ing-info"><%= ingredient.info %></p></li>
                <% }) %>
            </ul>

            <p class="block-name">Приготовление</p>
            <ol>
                <% steps.forEach(step => { %>
                    <li><p class="step-info"><%= step.info %></p></li>
                <% }) %>
            </ol>
        </section>
    </div>
</main>
</div>
<%- include('footer.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/recipe/recipeDelete.js"></script>
</body>
</html>
