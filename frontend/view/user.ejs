<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8" />
    <title>О нас</title>

    <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
    />

    <link rel="icon" href="#" type="image/x-icon" />
    <link rel="stylesheet" href="/css/header.css" />
    <link rel="stylesheet" href="/css/user.css" />
    <link rel="stylesheet" href="/css/fix.css" />
    <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
    />
</head>
<body>

<%- include('header.ejs') %>

<div class="main-content">
<main>
    <section class="info-user">
        <h2>Личные данные</h2>
        <p class="name">Имя:  <%= user.name %></p>
        <p class="last_name">Фамилия:  <%= user.last_name %></p>
        <p class="login">Логин: <%= user.login %></p>
        <p class="role">Роль:  <%= role %></p>
    </section>

    <section>
        <h2>Добавленные рецепты</h2>
        <div class="recipes">
            <% recipes.forEach(recipe => { %>
                <a href="/recipe/<%= recipe.id %>" class="recipe-link">
                    <div class="recipe">
                        <img
                                class="recipe-img"
                                src="image/recipe/<%= recipe.path_photo %>"
                                alt="Фото рецепта"
                        />
                        <div class="recipe-name"><%= recipe.name %></div>
                    </div>
                </a>
            <% }) %>
        </div>
    </section>
</main>
</div>
<%- include('footer.ejs') %>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/stat.js"></script>
</body>
</html>
